      var first = window.location.href.split("#");
      var second = first[1].split("&");
      if (second[0].split('=')[0] == 'access_token') {
        var x = second[0].split('=');
        localStorage.setItem(x[0], x[1]);
        x = second[2].split('=');
        localStorage.setItem(x[0], x[2]);
      }
      window.location.href="/add_event";
    });
