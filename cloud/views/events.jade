extends layout

block script
  script(type="text/javascript").
    $(document).ready(function() {
      var eventToHtmlObject = function(event) {
        var row = $("<div class='row event-row'>");
        var col = $("<div class='col-sm-10 col-sm-offset-1'>")
        var descriptionParagraph = $("<p>").text(event.description);
        console.log(event.host);
        xxx = event;

        col.append(descriptionParagraph);
        row.append(col);

        return row;
      }

      var events = !{events};
      for (var i = 0; i < events.length; ++i)
        $("#eventsContainer").append(eventToHtmlObject(events[i]));
    });

block content
  div(id="eventsContainer", class="container")